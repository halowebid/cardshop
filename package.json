{
  "name": "cardshop",
  "type": "module",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "dev": "bun run --bun vite dev",
    "build": "bun run --bun vite build",
    "preview": "bun run --bun vite preview",
    "prepare": "bun run --bun svelte-kit sync || echo ''",
    "check": "bun run --bun svelte-kit sync && bun run --bun svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "bun run --bun svelte-kit sync && bun run --bun svelte-check --tsconfig ./tsconfig.json --watch",
    "format:write": "bun run --bun prettier --write .",
    "format:check": "bun run --bun prettier --check .",
    "lint": "bun run --bun prettier --check . && bun run --bun eslint .",
    "db:push": "bun run --bun drizzle-kit push",
    "db:generate": "bun run --bun drizzle-kit generate",
    "db:migrate": "bun run --bun drizzle-kit migrate",
    "db:studio": "bun run --bun drizzle-kit studio"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@eslint/js": "^9.38.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@internationalized/date": "^3.8.1",
    "@lucide/svelte": "^0.544.0",
    "@sveltejs/adapter-node": "^5.4.0",
    "@sveltejs/kit": "^2.47.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/vite": "^4.1.14",
    "@tanstack/svelte-query-devtools": "^6.0.0",
    "@types/node": "^22",
    "@types/pg": "^8.15.6",
    "bits-ui": "^2.11.0",
    "clsx": "^2.1.1",
    "drizzle-kit": "^0.31.5",
    "drizzle-orm": "^0.44.6",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.12.4",
    "globals": "^16.4.0",
    "mode-watcher": "^1.1.0",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "svelte": "^5.41.0",
    "svelte-check": "^4.3.3",
    "svelte-sonner": "^1.0.5",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^3.1.1",
    "tailwindcss": "^4.1.14",
    "transliteration": "^2.3.5",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1",
    "vaul-svelte": "^1.0.0-next.7",
    "vite": "^7.1.10"
  },
  "dependencies": {
    "@tanstack/svelte-query": "^6.0.6",
    "better-auth": "^1.3.34",
    "postgres": "^3.4.7"
  },
  "packageManager": "bun@1.3.2"
}
